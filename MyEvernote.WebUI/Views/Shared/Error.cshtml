@using MyEvernote.Entities.Messages
@using MyEvernote.WebUI.ViewModel
@model  ErrorViewModel
@{
    ViewBag.Title = Model.Title;
}

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center "> @Model.Header </h1>
            </div>
            <div class="main-content">

                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;&nbsp;&nbsp; @Model.Title </h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (ErrorMessageObj item in Model.Items)
                        {
                            @item.message<br>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@{
    string js = string.Empty;

    js = "  setTimeout(function () { window.location = '" + Model.RedirectingUrl + "';}, " + Model.RedirectingTimeout + ");";
}

<script>

    $(function () {
        @Html.Raw(js);
    });
</script>