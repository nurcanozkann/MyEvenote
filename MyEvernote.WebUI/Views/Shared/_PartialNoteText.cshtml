@using MyEvernote.Entities
@model Note



<div class="row">
    <div class="col-md-12 text-right">
        <h3>
            @Model.Title
        </h3>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12 text-right">
        <span class="glyphicon glyphicon-user"></span> @Model.Owner.Username <br />
        <span class="glyphicon glyphicon-time"></span> @Model.UpdatedDate <br />
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text
        </p>
    </div>
</div>
